module "vpc_mumbai_mainnet" {
  source   = "../../modules/aws/vpc"
  region   = "ap-south-1"
  project  = "espresso"
  env      = "mainnet"
  vpc_cidr = "10.0.0.0/16"
  public_subnets = [
    {
      zone = "a"
      cidr = "10.0.0.0/24"
    },
    {
      zone = "b"
      cidr = "10.0.1.0/24"
    },
    {
      zone = "c"
      cidr = "10.0.2.0/24"
    }
  ]
  private_subnets = [
    {
      zone = "a"
      cidr = "10.0.3.0/24"
    },
    {
      zone = "b"
      cidr = "10.0.4.0/24"
    },
    {
      zone = "c"
      cidr = "10.0.5.0/24"
    }
  ]
}

locals {
  regular_node_subnets_mainnet = {
    0 = module.vpc_mumbai_mainnet.public_subnets["a"]
    1 = module.vpc_mumbai_mainnet.public_subnets["b"]
    2 = module.vpc_mumbai_mainnet.public_subnets["c"]
  }

  imp_fw_rules_mainnet = [
    {
      from_port   = 8080
      to_port     = 8080
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 9100
      to_port     = 9100
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  ]
}

module "da_node_mainnet" {
  source           = "../../modules/aws/ec2"
  region           = "ap-south-1"
  project          = "espresso"
  env              = "mainnet"
  vpc_id           = module.vpc_mumbai_mainnet.vpc_id
  instance_name    = "da-node"
  instance_type    = "r6a.xlarge"
  use_eip          = true
  subnet_id        = module.vpc_mumbai_mainnet.public_subnets["a"]
  create_data_disk = true
  data_disk_size   = 500
  inbound_ip_rules = concat(local.imp_fw_rules_mainnet, [
    {
      from_port   = 7000
      to_port     = 7000
      protocol    = "udp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 7000
      to_port     = 7000
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 80
      to_port     = 80
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 22001
      to_port     = 22001
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  ])
}

module "regular_nodes_mainnet" {
  count            = 3
  source           = "../../modules/aws/ec2"
  region           = "ap-south-1"
  project          = "espresso"
  env              = "mainnet"
  vpc_id           = module.vpc_mumbai_mainnet.vpc_id
  instance_name    = "regular-node-${count.index}"
  instance_type    = "r6a.xlarge"
  use_eip          = true
  subnet_id        = local.regular_node_subnets_mainnet[count.index]
  create_data_disk = false
  root_disk_size   = 30
  inbound_ip_rules = concat(local.imp_fw_rules_mainnet, [
    {
      from_port   = 7000
      to_port     = 7000
      protocol    = "udp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 7000
      to_port     = 7000
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 80
      to_port     = 80
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 22001
      to_port     = 22001
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  ])
}

module "rds_mainnet" {
  source                  = "../../modules/aws/rds"
  vpc_id                  = module.vpc_mumbai_mainnet.vpc_id
  project                 = "espresso"
  env                     = "mainnet"
  instance_name           = "da-db"
  region                  = "ap-south-1"
  subnet_ids              = [module.vpc_mumbai_mainnet.private_subnets["a"], module.vpc_mumbai_mainnet.private_subnets["b"], module.vpc_mumbai_mainnet.private_subnets["c"]]
  instance_engine         = "postgres"
  instance_engine_version = "16"
  instance_type           = "db.t3.micro"
  instance_storage        = 10
  default_password        = var.rds_mainnet_password
  default_username        = "sequencer"
  default_database_name   = "sequencer"
  parameter_group_family  = "postgres16"
  inbound_rules = [{
    from_port       = 5432
    to_port         = 5432
    protocol        = "tcp"
    security_groups = [module.da_node_mainnet.instance_security_group_id]
  }]
  parameter_group_params = [
    {
      name  = "log_connections"
      value = "1"
    },
    {
      name  = "rds.force_ssl"
      value = "0"
    }
  ]
  depends_on = [module.da_node_mainnet]
}
